<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadline6</item>
        <item name="textAppearanceHeadline5">@style/CustomHeadline5</item>
        <item name="textAppearanceHeadline4">@style/CustomHeadline4</item>


    </style>

    <!-- Headlines Login / Sign up -->
    <style name="CustomHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    
    <style name="CustomHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="CustomHeadline4" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

    <style name="CustomHeadlineSmall" parent="">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="CustomOverlineLarge" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomOverlineSmall" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="CustomButton" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:background">@android:color/holo_green_dark</item>
    </style>

    <style name="CustomTextGroupInfo" parent="">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextBoldMedium" parent="">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="circleImageView" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="floatingButtonArrow" parent="">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="tint">@color/primaryTextColor</item>
    </style>


    <style name="RoomReservationButtons" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="android:hint">@string/select</item>
    </style>




</resources>