<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="textAppearanceHeadline6">@style/CustomHeadline6</item>
        <item name="textAppearanceHeadline5">@style/CustomHeadline5</item>

    </style>

    <!-- Headlines Login / Sign up -->
    <style name="CustomHeadline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">@color/primaryColor</item>
    </style>
    
    <style name="CustomHeadline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/secondaryDarkColor</item>
    </style>

    <style name="CustomHeadlineSmall" parent="">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="CustomTextLarge" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomTextSmall" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
    </style>


    <style name="circleImageView" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>





</resources>