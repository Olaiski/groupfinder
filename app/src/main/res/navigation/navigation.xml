<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/userProfileFragment"
    >


    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.groupfinder.userprofile.UserProfileFragment"
        android:label="Home"
        tools:layout="@layout/user_profile_fragment" >
        <action
            android:id="@+id/show_group_fragment"
            app:destination="@id/groupFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.groupfinder.login.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.groupfinder.about.AboutFragment"
        android:label="About"
        tools:layout="@layout/about_fragment" />
    <fragment
        android:id="@+id/myReservationFragment"
        android:name="com.example.groupfinder.calendar.MyReservationFragment"
        android:label="Reservation"
        tools:layout="@layout/my_reservations_fragment" >
        <action
            android:id="@+id/action_myReservationFragment_to_reservationFragment"
            app:destination="@id/reservationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/myReservationFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/reservationFragment"
        android:name="com.example.groupfinder.calendar.ReservationFragment"
        android:label="Reservation"
        tools:layout="@layout/reservation_fragment" >
        <action
            android:id="@+id/action_reservationFragment_to_myReservationFragment"
            app:destination="@id/myReservationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />
    </fragment>


    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.groupfinder.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/settings_fragment" />
    <fragment
        android:id="@+id/signUpFragment"
        tools:layout="@layout/sign_up_fragment"
        android:name="com.example.groupfinder.signup.SignUpFragment"
        android:label="SignUp" >
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/groupFragment"
        tools:layout="@layout/group_fragment"
        android:name="com.example.groupfinder.group.GroupFragment"
        android:label="Group" >
        <argument
            android:name="selectedGroup"
            app:argType="com.example.groupfinder.network.models.Group" />
    </fragment>

    <fragment
        android:id="@+id/databaseFragment"
        tools:layout="@layout/fragment_database"
        android:name="com.example.groupfinder.database.DatabaseFragment"
        />
    <fragment
        android:id="@+id/groupsFragment"
        tools:layout="@layout/groups_fragment"
        android:name="com.example.groupfinder.groupfinder.GroupsFragment"
        android:label="GroupsFragment" >
        <action
            android:id="@+id/action_groupsFragment_to_groupFragment"
            app:destination="@id/groupFragment" />
    </fragment>



</navigation>
